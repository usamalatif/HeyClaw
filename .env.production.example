PORT=3000
NODE_ENV=production

# PostgreSQL — connect to your existing Postgres container/host
# Use "host.docker.internal" if Postgres runs on the Docker host,
# or the container name if on the same Docker network.
DATABASE_URL=postgres://openclaw:YOUR_PASSWORD@host.docker.internal:5432/openclaw_app

# Redis — connect to your existing Redis container/host
REDIS_URL=redis://host.docker.internal:6379

# Auth
JWT_SECRET=generate-with-openssl-rand-hex-64

# OpenAI (for STT + GPT-5-nano model)
OPENAI_API_KEY=sk-your-openai-key

# ElevenLabs TTS
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# OpenClaw Gateway (Docker service name — handled by compose networking)
OPENCLAW_GATEWAY_URL=http://gateway:18789
OPENCLAW_GATEWAY_TOKEN=generate-with-openssl-rand-hex-32
OPENCLAW_CONFIG_PATH=/openclaw-config/openclaw.json
WORKSPACES_DIR=/openclaw-workspaces
GATEWAY_WORKSPACES_DIR=/root/.openclaw/workspaces
TEMPLATES_DIR=/app/templates
GATEWAY_CONTAINER_NAME=heyclaw-gateway
